body {
  margin: 0;
  font-family: sans-serif;
}

#application {
  display: grid;
  grid-row-gap: 20px;
  padding: 20px;
  width: 1200px;
  margin: 0 auto;
}

h1, h2, h3, h4, h5, h6 {
    margin-top: 0;
}

p {
    line-height: 1.3;
}

dd, dt {
    display: inline;
}

dt {
    font-weight: bold;
    clear: left;
}

dt::after {
    content: ':';
    margin-right: 1ch;
}

dd {
    margin-left: 0;
}
